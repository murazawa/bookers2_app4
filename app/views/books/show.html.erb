<div class='container'>
  <div class='row'>
    <div class='col-md-3'>


      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>

      <h2 class="mt-3">New book</h2>
      <%= render 'layouts/errors', obj: @book %>
      <%= render 'books/form', book: @newbook %>  <!--空のインスタンス変数を渡す-->
    </div>

    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@book.user) do %>

            <%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @book.user.name %>
            <% end %>
          </td>

          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <!--ここからいいいいね-->
          <% if @book.favorited_by?(current_user) %>
          <td>
            <%= link_to book_favorites_path(@book), method: :delete do %>
              ♥<%= @book.favorites.count %>
            <% end %>
          </td>
          <% else %>
          <td>
            <%= link_to book_favorites_path(@book), method: :post do %>
              ♡<%= @book.favorites.count %>
            <% end %>
          </td>
          <% end %>
          <td>コメント数:<%= @book.book_comments.count %></td>


          <!--コメント機能ここから-->

          <!--コメント投稿機能-->


          <% if @user.id == current_user.id %>
          <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
          <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}" %></td>
          <% end %>
        </tr>

      </table>

      
        <td class="comments">
              <% @book.book_comments.each do |book_comment| %>

                <p><%= image_tag('no-image-icon.jpg') %></p>
                <%= link_to user_path(@book.user) do %>
                  <%= book_comment.user.name %>
                <% end %>
                  <%= book_comment.comment %>
              <% if book_comment.user == current_user %>
               <%= link_to "destroy", book_book_comment_path(@book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
               <% end %>
            <% end %>
        </td>
       
       
        <td class="new-comment">
            <%= form_with model:[@book, @book_comment], local: true do |f| %>

                <% f.label :comment %>
                <%= f.text_area :comment, rows:'5', cols:'75', placeholder: "コメントここ" %>

                <%= f.submit "送信" %>
              <% end %>
        </td>
    






    </div>
  </div>
</div>