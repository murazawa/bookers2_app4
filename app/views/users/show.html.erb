<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>

      <h2>User info</h2>
      <%= render 'info', user: @user %>

      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <!--非同期-->
        <%= render 'books/index',books: @books, book: @book %>
      <!--非同期-->
      <h2>投稿数の前日比、前週比</h2>

       <%= render 'books/post-day', book_today: @book_today, book_yesterday: @book_yesterday %>
       <%= render 'books/post-week', book_week: @book_week, book_lastweek: @book_lastweek %>
    </div>
  </div>
</div>